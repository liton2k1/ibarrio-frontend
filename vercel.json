{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],

  "redirects": [
    {
      "source": "/:path*",
      "has": [
        {
          "type": "host",
          "value": "mydoorstep.app"
        }
      ],
      "destination": "https://doorstep.app/:path*",
      "permanent": true
    },
    {
      "source": "/:path*",
      "has": [
        {
          "type": "host",
          "value": "www.mydoorstep.app"
        }
      ],
      "destination": "https://doorstep.app/:path*",
      "permanent": true
    }
  ],
  
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://ibarrio-api.code-commando.com/api/v1/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}